@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<ol>
    <li>

        @foreach (Book book in ViewBag.Books)
        {
            <div>
                <div><span>ID: </span>@(book.ID)</div>
                <div><span>Title: </span>@(book.Title)</div>
                <div><span>Author: </span>@(book.Author)</div>
                <div><span>Publicatioon Date: </span>@(book.PublicationDate.ToLongDateString())</div>
                <div><span>Checked Out Date: </span>@(book.CheckedOutDate.ToLongDateString())</div>
                <div><span>Due Date: </span>@(book.DueDate.ToLongDateString())</div>
                <div><span>Status: </span>@(book.ReturnedDate==null?"Taken":((DateTime)book.ReturnedDate).ToLongDateString())</div>
            </div>
        }
    </li>
</ol>
